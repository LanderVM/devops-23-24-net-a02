@page "/personaldetails"
@inject PersonalDetailsState PersonalDetailsState

<PageTitle>Persoonlijke gegevens</PageTitle>

<MudPaper Width="100%" Class="pt-16" Height="100%" Elevation="0">
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
        <MudGrid Spacing="@Spacing">
            <MudItem lg="2" md="2" sm="12" xs="12">
                <MudTimeline Style="height:510px" TimelinePosition=TimelinePosition.Left >
                    <MudTimelineItem Color=Color.Primary Size="Size.Large" Variant="Variant.Filled">
                        <ItemDot>
                            <MudText Style="color:#FFFFFF;font-size:1.3em">1</MudText>
                        </ItemDot>
                        <ItemContent >
                            <MudText Style="color:#A07B37;margin-top:12px">Evenement</MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color=Color.Primary Size="Size.Large" Variant="Variant.Filled" Style="height:170px">
                        <ItemDot>
                            <MudText Style="color:#FFFFFF;font-size:1.3em">2</MudText>
                        </ItemDot>
                        <ItemContent >
                            <MudText Style="color:#A07B37;margin-top:60px">Personalia</MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color=Color.Secondary Size="Size.Large" Variant="Variant.Filled">
                        <ItemDot>
                            <MudText Style="color:#FFFFFF;font-size:1.3em">3</MudText>
                        </ItemDot>
                        <ItemContent >
                            <MudText Style="color:#C8A86E;margin-top:12px">Extra marteriaal</MudText>
                        </ItemContent>
                    </MudTimelineItem>
                </MudTimeline>
            </MudItem>
            <MudItem lg="10" md="10" sm="12" xs="12">
                <MudGrid Spacing="@Spacing">
                    <MudItem lg="6" md="6">
                        <MudText Class="ml-16 mt-6 mb-1" Typo="Typo.h6">Naam</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Naam" Class="ml-16 mr-16 mb-6 pt-2" Label="naam" Variant="Variant.Outlined"></MudTextField>
                        <MudText Class="ml-16 mb-1" Typo="Typo.h6">Email</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Email" Class="ml-16 mr-16 pt-2" Label="email" Variant="Variant.Outlined"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6">
                        <MudText Class="ml-16 mt-6 mb-1" Typo="Typo.h6">Voornaam</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Voornaam" Class="ml-16 mr-16 mb-6 pt-2" Label="voornaam" Variant="Variant.Outlined"></MudTextField>
                        <MudText Class="ml-16 mb-1" Typo="Typo.h6">Telefoon nummer</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.TelefoonNummer" Class="ml-16 mr-16 pt-2" Label="telefoon nummer" Variant="Variant.Outlined"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6">
                        <MudText Class="ml-16 mt-16 mb-1" Typo="Typo.h6">Straat</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Straat" Class="ml-16 mr-16 mb-6 pt-2" Label="straat" Variant="Variant.Outlined"></MudTextField>
                        <MudText Class="ml-16 mb-1" Typo="Typo.h6">Gemeente</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Gemeente" Class="ml-16 mr-16 mb-4 pt-2" Label="gemeente" Variant="Variant.Outlined"></MudTextField>
                    </MudItem>
                    <MudItem lg="6" md="6">
                        <MudText Class="ml-16 mt-16 mb-1" Typo="Typo.h6">Huisnummer</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Huisnummer" Class="ml-16 mr-16 mb-6 pt-2" Label="huisnummer" Variant="Variant.Outlined"></MudTextField>
                        <MudText Class="ml-16 mb-1" Typo="Typo.h6">Postcode</MudText>
                        <MudTextField @bind-Value="PersonalDetailsState.Postcode" Class="ml-16 mr-16 pt-2" Label="postcode" Variant="Variant.Outlined"></MudTextField>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
        @if (!@PersonalDetailsState.SwitchValue)
        {
            <MudGrid>
                <MudItem lg="2" md="2" sm="12" xs="12">

                </MudItem>
                <MudItem lg="5" md="5" sm="12" xs="12">
                    <MudText Class="ml-16 mb-1" Typo="Typo.h6">Facturatie straat</MudText>
                    <MudTextField @bind-Value="PersonalDetailsState.FacturatieStraat" Class="ml-16 mr-16 mb-6 pt-2" Label="straat" Variant="Variant.Outlined"></MudTextField>
                    <MudText Class="ml-16 mb-1" Typo="Typo.h6">Facturatie gemeente</MudText>
                    <MudTextField @bind-Value="PersonalDetailsState.FacturatieGemeente" Class="ml-16 mr-16 mb-4 pt-2" Label="gemeente" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
                <MudItem lg="5" md="5" sm="12" xs="12">
                    <MudText Class="ml-16 mb-1" Typo="Typo.h6">Facturatie huisnummer</MudText>
                    <MudTextField @bind-Value="PersonalDetailsState.FacturatieHuisnummer" Class="ml-16 mr-16 mb-6 pt-2" Label="huisnummer" Variant="Variant.Outlined"></MudTextField>
                    <MudText Class="ml-16 mb-1" Typo="Typo.h6">Facturatie Postcode</MudText>
                    <MudTextField @bind-Value="PersonalDetailsState.FacturatiePostcode" Class="ml-16 mr-16 pt-2" Label="postcode" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
            </MudGrid>
        }
        <MudGrid>
            <MudItem lg="2" md="2" sm="12" xs="12">

            </MudItem>
            <MudItem lg="4" md="4" sm="12" xs="12">
                <MudText Class="ml-16" Typo="Typo.h6">
                    Adress is ook facturatieadres
                    <MudSwitch @bind-Checked="@PersonalDetailsState.SwitchValue" Class="ml-4" Style="display:inline-block" Color="Color.Primary" />
                </MudText>
            </MudItem>
            <MudItem lg="4" md="4" sm="12" xs="12">

            </MudItem>
            <MudItem lg="2" md="2" sm="12" xs="12">
                <MudButton Variant="Variant.Filled" Size="Size.Large" Color="Color.Primary" OnClick="@ClickVolgende">Volgende</MudButton>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudPaper>

@code {
    private int Spacing { get; set; } = 2;

    private void ClickVolgende()
    {
        
    }
}
