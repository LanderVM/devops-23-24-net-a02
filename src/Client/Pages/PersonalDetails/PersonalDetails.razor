@page "/personalDetails"

<PageTitle>Persoonlijke gegevens</PageTitle>

<MudPaper Width="100%" Class="pt-16" Height="100%" Elevation="0">
    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
        <MudGrid Spacing="@Spacing">
            <MudItem xs="2">
                <MudTimeline Style="height:510px" TimelinePosition=TimelinePosition.Left >
                    <MudTimelineItem Color=Color.Primary Size="Size.Large" Variant="Variant.Filled">
                        <ItemDot>
                            <MudText Style="color:#FFFFFF;font-size:1.3em">1</MudText>
                        </ItemDot>
                        <ItemContent >
                            <MudText Style="color:#A07B37">Evenement</MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color=Color.Primary Size="Size.Large" Variant="Variant.Filled" Style="height:170px">
                        <ItemDot>
                            <MudText Style="color:#FFFFFF;font-size:1.3em">2</MudText>
                        </ItemDot>
                        <ItemContent >
                            <MudText Style="color:#A07B37">Personalia</MudText>
                        </ItemContent>
                    </MudTimelineItem>
                    <MudTimelineItem Color=Color.Secondary Size="Size.Large" Variant="Variant.Filled">
                        <ItemDot>
                            <MudText Style="color:#FFFFFF;font-size:1.3em">3</MudText>
                        </ItemDot>
                        <ItemContent >
                            <MudText Style="color:#C8A86E">Extra marteriaal</MudText>
                        </ItemContent>
                    </MudTimelineItem>
                </MudTimeline>
            </MudItem>
            <MudItem xs="5">
                <MudText Class="ml-16 mt-8 mb-6" Typo="Typo.h6">Naam</MudText>
                <MudTextField @bind-Value="TextValue" Class="ml-16 mr-16 mb-8" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
                <MudText Class="ml-16 mb-6" Typo="Typo.h6">Email</MudText>
                <MudTextField @bind-Value="TextValue" Class="ml-16 mr-16" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="5">
                <MudText Class="ml-16 mt-8 mb-6" Typo="Typo.h6">Voornaam</MudText>
                <MudTextField @bind-Value="TextValue" Class="ml-16 mr-16 mb-8" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
                <MudText Class="ml-16 mb-6" Typo="Typo.h6">Telefoon</MudText>
                <MudTextField @bind-Value="TextValue" Class="ml-16 mr-16" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
        </MudGrid>
    </MudContainer>
</MudPaper>

@code {
    private int Spacing { get; set; } = 2;

    public string TextValue { get; set; }

}
