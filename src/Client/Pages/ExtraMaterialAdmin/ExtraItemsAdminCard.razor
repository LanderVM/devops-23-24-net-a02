
<MudCard Style="height: 100%;">
    <div style="height: 100%; display: flex; flex-direction: column;">
        <MudCardMedia Image=@ImageUrl Height="250" />
        <MudCardContent>
            <MudText Typo="Typo.h5" Class="mb-2">@Title</MudText>
            @foreach (string i in Attributes)
            {
                <MudText Typo="Typo.body2" Class="mb-3">@i</MudText>
            }
            <MudText Typo="Typo.body2" Class="mb-3">€ @(Decimal.Round(Price, 2))/72uur</MudText>
            <MudText Typo="Typo.body2" Class="mb-1">@Stock in stock</MudText>
            
        </MudCardContent>
        <MudCardActions Class="mt-auto">
            <MudGrid>
                <MudItem xs="12">
                    <MudButton class="mb-n4" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Aanpassen</MudButton>
                </MudItem>
                <MudItem xs="12">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Verwijderen</MudButton>
                </MudItem>
            </MudGrid>
        </MudCardActions>
    </div>
</MudCard>

@code {

    [Parameter]
    public string ImageUrl { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public List<string> Attributes { get; set; }

    [Parameter]
    public int EquipmentId { get; set; }

    [Parameter]
    public int Stock { get; set; }

    [Parameter]
    public decimal Price { get; set; }

    

}