<MudPaper Height="500px" Width="100%" Class=@($"{MarginTop} mb-6") Style=@($"background-color:{BackgroundColor}") data-test-id="formulas-formula-card">
    <MudText Style="text-align: center;font-weight: bold;color:black" Typo="Typo.h3" Class="pt-5">
        @Title
    </MudText>
    <hr style="background-color:black;height:1.5px;border-width:0;margin-left:30px;margin-right:30px;margin-top:20px;margin-bottom:20px"/>
    @foreach (var attrbt in Attributes)
    {
        <MudGrid>
            <MudItem xs="1"></MudItem>
            <MudItem xs="1">
                <MudIcon Style="margin-right: 1.5px;color: green" Icon="@Icons.Material.Filled.Check" aria-label="check mark"></MudIcon>
            </MudItem>
            <MudItem xs="9">
                <MudText Style="font-size:1.7em;color:black">
                    @attrbt
                </MudText>
            </MudItem>
            <MudItem xs="1"></MudItem>
        </MudGrid>
    }
</MudPaper>
<MudButton OnClick="@Click" Variant="Variant.Filled" Size="Size.Large" Color="Color.Primary" FullWidth="true">Kies</MudButton>

@code {

    [Parameter]
    public string Title { get; set; } = "Basic";

    [Parameter]
    public EventCallback Click { get; set; }

    [Parameter]
    public string BackgroundColor { get; set; } = "EBEBEB";

    [Parameter]
    public List<string> Attributes { get; set; } = new() { "foodtruck", "incl. eerste tap", "incl. tweede tap", "incl. derde tap" };

    [Parameter]
    public string MarginTop { get; set; } = "";

}