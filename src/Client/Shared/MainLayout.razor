@inherits LayoutComponentBase
@using devops_23_24_net_a02.Client.Pages.NavBar
@inject NavigationManager MyNavigationManager

<MudThemeProvider Theme="MainTheme" DefaultScrollbar="true" />
<MudDialogProvider />
<MudSnackbarProvider />


@if (onHomePage)
{  
    <MudLayout>     
        <MudMainContent style="padding-top: 0px">
            <NavBarHome />
            @Body
        </MudMainContent>
    </MudLayout>            
}  
else  
{  
    <MudLayout>
        <MudAppBar>
            <NavBar />  
        </MudAppBar>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>        
 } 


@code {
    bool onHomePage => MyNavigationManager.Uri == MyNavigationManager.BaseUri;
    MudTheme MainTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Source Sans Pro" }
                },
                H1 = new H1()
                {
                    FontFamily = new[] { "Source Sans Pro Semibold" }
                },
                H2 = new H2()
                {
                    FontFamily = new[] { "Source Sans Pro Semibold" }
                },
                H3 = new H3()
                {
                    FontFamily = new[] { "Source Sans Pro Semibold" }
                },
                H4 = new H4()
                {
                    FontFamily = new[] { "Source Sans Pro Semibold" }
                }
            },
            Palette = new PaletteLight()
            {
                Primary = "C8A86E",
                Secondary = "EDE7DB",

                TextSecondary = "FFFFFF",
                TextPrimary = "000000",

                AppbarBackground = "FFFFFF",
                Background = "F8F8F8",
            }
        };
}
