<CascadingAuthenticationState>
<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <MudContainer>
                <div>
                    <MudText Typo="Typo.h3" GutterBottom="true">404</MudText>
                    <MudText Typo="Typo.h5">Oops! The page you are looking for does not exist.</MudText>
                    <MudButton Href="/" Color="Color.Primary" Variant="Variant.Filled">Go to Home</MudButton>
                </div>
            </MudContainer>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>
